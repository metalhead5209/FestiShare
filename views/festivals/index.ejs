
   
<% layout('layouts/boilerplate') %> 

<style>
    #festimg {
        border-radius: 5px;
    }

    .festCard {
        filter: drop-shadow(0 0 0.50rem #48cae4);
    }

    #map {
        filter: drop-shadow(0 0 0.50rem #48cae4);
    }
</style>


<h2 class="mt-2 mb-3 text-light text-center">FestiMap</h2>
<div id="map" class="mb-5" style="width: 100%; height: 400px; border-radius: 10px"></div>

    <h1 class="text-light text-center mb-4">Festivals</h1>

        <% festivals.forEach(festival => { %>
                <div class="card mb-5 bg-dark text-light festCard">
                    <div class="row">
                        <div class="col-md-4">
                            <img id="festimg" src="<%= festival.images[0].url %>" alt="fest" class="img-fluid">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= festival.title  %> </h5>
                                <p class="card-text"><%= festival.description  %> </p>
                                <p class="card-text">
                                    <small class="text-muted"><%= festival.location  %> </small>
                                </p>
                                <a class="btn btn-info" href="/festivals/<%=festival._id%>">View <%= festival.title%></a>
                            </div>
                        </div>
                    </div>
                </div>
      <%  }) %> 

      <script>
        const mapBoxToken = '<%-process.env.MAPBOX_TOKEN%>';
        const festivals = {features: <%- JSON.stringify(festivals) %>};
      </script>

<script src="/scripts/mapCluster.js"></script>