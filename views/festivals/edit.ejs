<% layout('layouts/boilerplate') %> 
    
    <h1>Edit Festival</h1>
        <form action="/festivals/<%=festival._id%>?_method=PUT" method="POST">
            <div>
                <label for="title">Title</label>
                <input type="text" id="title" name="festival[title]" value="<%= festival.title %>">
            </div>
            <div>
                <label for="location">Location</label>
                <input type="text" id="location" name="festival[location]" value="<%= festival.location %>">
            </div>
            <button>Submit</button>
        </form>
        <a href="/festivals">Back To Festivals</a>

