<% layout('layouts/boilerplate') %> 
    

        


        <div class="row">
            <h1 class="text-center">Edit Festival</h1>
            <div class="col-6 offset-3">
                <form action="/festivals/<%=festival._id%>?_method=PUT" method="POST">
                 <div>
                     <label class="form-label" for="title">Title</label>
                     <input class="form-control" type="text" id="title" name="festival[title]"value="<%= festival.title %>">
                 </div>
                 <div>
                     <label class="form-label" for="location">Location</label>
                     <input class="form-control" type="text" id="location" name="festival[location]"value="<%= festival.location %>">
                 </div>
                 <div>
                     <label class="form-label" for="image">Image URL</label>
                     <input class="form-control" type="text" id="Image" name="festival[image]"value="<%= festival.image %>">
                 </div>
                 <div class="mb-3">
                     <label class="form-label" for="price">Festival Price</label>
                 <div class="input-group mb-2">
                     <span class="input-group-text" id="price">$</span>
                     <input type="text" class="form-control" placeholder="0.00" name="festival[price]"value="<%= festival.price %>">
                 </div>
                 <div class="mb-3">
                     <label for="description" class="form-label">Description</label>
                     <textarea class="form-control" id="description" rows="3" name="festival[description]"><%= festival.description  %></textarea>
                   </div>
             </div>
                 <button class="btn btn-success mb-3">Submit</button>
             </form>
             <a class="btn btn-info" href="/festivals">Back To Festivals</a>
            </div>
        </div>